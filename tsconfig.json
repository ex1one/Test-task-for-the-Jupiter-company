{
  "compilerOptions": {
    "incremental": true,
    "target": "es2020",
    "rootDir": ".",
    "moduleResolution": "node",
    "noEmit": true,
    "outDir": "./dist/",
    "sourceMap": true,
    "noImplicitAny": true,
    "isolatedModules": true,
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "allowJs": true,
    "allowSyntheticDefaultImports": true,
    "skipLibCheck": true,
    "strict": true,
    "module": "es6",
    "jsx": "preserve",
  },
  "exclude": [
    "./node_modules"
  ]
}